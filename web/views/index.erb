	<div class="ink-grid gutters">
		<div class="column-group">
			<div class="xlarge-70 large-70 medium-80 small-90 tiny-100 push-center gutters">
				<!-- title -->
				<div class="align-center">
					<h1 id="title"><a href="/">Hyphaelia.io</a></h1>
					<p id="tagline">
						The Secure, Distributed Communication Platform
					</p>
				</div>
				<!-- nav links -->
				<div class="column-group">
					<nav class="ink-navigation ink-grid">
						<ul class="pagination pills black">
							<li><a href="/#about">About</a></li>
							<li><a href="/#register">Register</a></li>
							<li><a href="/#login">Login</a></li>
						</ul>
					</nav>
				</div>
				<!-- sector nav -->
				<div class="column-group">
					<nav class="ink-navigation ink-grid">
						<ul class="pagination pills black">
							<li><a href="#">About</a></li>
							<li><a href="#">Register</a></li>
							<li><a href="#">Browse</a></li>
						</ul>
					</nav>
				</div>
				<!-- about section -->
				<a name="about"></a>
				<h2 id="about">About</h2>
				<div class="column-group">
					<div class="all-50">
