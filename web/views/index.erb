					<p id="tagline">
						The Secure, Distributed Communication Platform
					</p>
				</div>
				<!-- nav links -->
				<div class="column-group">
					<nav class="ink-navigation ink-grid">
						<ul class="pagination pills black">
							<li><a href="/#about">About</a></li>
