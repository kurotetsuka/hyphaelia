require 'dotenv'
require_relative 'src/rest_api'
require_relative 'src/web_app'

# general tasks
task :default => [ :gen ]
task :freshen => [ :clean, :gen ]
task :clean do
	%x[ rm -rf build/*]
end
task :test => [ :launch_app ]

# generation
task :gen => [ :gen_dirs, :gen_images, :gen_libs, :gen_html ] do
	%x[ chmod og+rx -R build/]
end
task :gen_dirs do
	%x[ mkdir -p build/img build/lib]
end
task :gen_images do
	%x[ tool/gen_icon.sh]
	%x[ cp res/* build/img/]
end
task :gen_libs do
	%x[ mkdir -p build/lib/ink]
	%x[ cp -r \
		lib/ink-3.1.1/css lib/ink-3.1.1/fonts lib/ink-3.1.1/js \
		build/lib/ink/]
	%x[ cp lib/jquery-1.11.1.min.js build/lib/]
end
task :gen_html do
	%x[ cp -r html/* build/]
end

# deployment
task :load_env do
	env = Dotenv::Environment.new( "config/dev.env")
	env.load
	env.apply!
end
task :undeploy => [ :load_env ] do
	%x[ rm -rf #{ENV['HYPH_install_dir']}*]
end
task :deploy => [ :load_env ] do
	%x[ rm -rf #{ENV['HYPH_install_dir']}*]
	#%x[ mkdir -p #{ENV['HYPH_install_dir']}]
	%x[ cp -r build/* #{ENV['HYPH_install_dir']}]
end

# launch webserver
task :launch_app => :gen do
	Hyph::WebApp.run!
end

# rest api stuff
task :launch_api do
	Hyph::RestApi.run!
end
