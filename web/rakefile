require 'dotenv'
require_relative 'src/rest_api'

# general tasks
task :default => [ :gen ]
task :freshen => [ :clean, :gen]
task :clean do
	%x[ rm -rf gen/*]
end
task :test => [ :gen, :deploy]

# generation
task :gen => [ :gen_dirs, :gen_images, :gen_libs, :gen_html] do
	%x[ chmod og+rx -R gen/]
end
task :gen_dirs do
	%x[ mkdir -p gen/css gen/img gen/include gen/lib gen/js]
end
task :gen_images do
	%x[ tool/gen_icon.sh]
	%x[ cp res/* gen/img/]
end
task :gen_libs do
	%x[ mkdir -p gen/lib/ink]
	%x[ cp -r lib/ink-3.1.1/css lib/ink-3.1.1/fonts lib/ink-3.1.1/js gen/lib/ink/]
	%x[ cp lib/jquery-1.11.1.min.js gen/lib/]
end
task :gen_html do
	%x[ cp -r html/* gen]
end

# deployment
task :load_env do
	env = Dotenv::Environment.new( "config/dev.env")
	env.load
	env.apply!
end
task :undeploy => [ :load_env] do
	%x[ rm -rf #{ENV['HYPH_install_dir']}*]
end
task :deploy => [ :load_env] do
	%x[ rm -rf #{ENV['HYPH_install_dir']}*]
	#%x[ mkdir -p #{ENV['HYPH_install_dir']}]
	%x[ cp -r gen/* #{ENV['HYPH_install_dir']}]
end

# rest api stuff
task :launch_api do
	Hyph::RestApi.set_dbcreds(
		ENV['HYPH_db_user'],
		ENV['HYPH_db_pass'])
	Hyph::RestApi.db_test
	Hyph::RestApi.run!
end